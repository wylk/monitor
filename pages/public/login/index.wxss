page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: url(https://mall.epaikj.com/static/images/indexBack.png);
  background-size: 100% 100%;
}

.content {
  width: 80%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-icon {
  margin-top: 10%;
  width: 46%;
  height: 36%;
  background-size: 100% 100%;
}

.login-from {
  margin-top: 32px;
  width: 90%;
  height: 50%;
}

/*表单内容*/

.inputView {
  line-height: 44px;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px;
}

.inputText {
  flex: block;
  float: right;
  text-align: center;
  margin-right: 53px;
  margin-top: 11px;
  color: #ccc;
  font-size: 14px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  margin-top: 50px;
  display: flex;
  justify-content: center;
}

.loginBtn {
  height: 40px;
  width: 95%;
  background: #f6bc00;
  color: #fff;
  font-size: 12px;
  text-align: center;
  line-height: 40px;
  border-radius: 17px 17px 17px 17px;
}
