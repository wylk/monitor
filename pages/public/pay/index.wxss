/* pages/public/pay/index.wxss */

.page{
  height:100%;
}
.container{
  width: 100%;
  height: 100%
}
.header-top{
  height: 100px;
  width: 100%;
  background-image: url('https://yipaikeji.oss-cn-beijing.aliyuncs.com/static/picture/wechat-new/recharge-banner.png');
  background-size: 100% 100%;
}
.voucher{
  border-bottom:1px solid #f0f0f0;
  height: 50px;
  line-height: 50px;
  text-align: center;
}
.img-responsive{
  height: 100%;
  width: 100%;
}
.content{
  width: 95%;
  padding-left:10px;
}
.recharge-row{
  height: 50px;
  border-bottom:1px solid #f0f0f0;
  display: flex;
  line-height: 50px;
  margin-bottom:5px;
}
.recharge-title{
  width: 35%;
}
.inputText{
  float: right;
  text-align: center;
  margin-right: 80px;
  margin-top: 11px;
  color: red;
  font-size: 20px;
  border-bottom:1px solid #D8BFD8;
}
.recharge-choose{
  height: 100px;
  border-bottom:1px solid #f0f0f0; 
  display: flex;
  justify-content:space-between;
}
.choose-one{
  border:1px solid #F6BC00;
  width: 23%;
  height: 70px;
  border-radius:5px 5px 5px 5px;
}
.active{
  background: #F6BC00;
}
.giveAway-money,.real-money{
  height: 25px; 
  line-height: 25px;
  text-align: center;
  font-size: 14px;
}
.real-money{
  margin-top:10px;
}
.giveAway-money{
  color: red;
  font-size: 12px;
}
.WeChat{
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  justify-content:space-between;
}
.row-1{
  width: 30%;
  display: flex;
}
.row-img{
  width: 40%;
   margin-left:13px;
}
.wximg{
  width: 60%;
  height: 45%;
}
.row-2{
  width: 10%;
}
.iconimg{
  width: 51%;
  height: 32%
}
.btn-line{
  height: 100px;
  line-height: 100px;
  display: flex;
  align-items:center;
  justify-content: center;
}

.payBtn{
  height: 40px;
  width: 90%;
  background: #F6BC00;
  color: #000;
  font-size: 17px;
  text-align: center;
  line-height: 40px;
  border-radius: 4px 4px 4px 4px;
}